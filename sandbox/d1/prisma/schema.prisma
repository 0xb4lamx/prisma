generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/.prisma/client"
  engineType      = "wasm"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Customers {
  customerId  Int     @id @default(autoincrement())
  companyName String?
  contactName String?
}

/// Testing with D1 types
model Test {
  id      Int     @id @default(autoincrement())
  text    String?
  real    Float?
  int     Int?
  boolean Boolean
  blob    Bytes?
}

/// Testing with non-default D1 types
model PrismaTest {
  id     Int      @id @default(autoincrement())
  date   DateTime
  bigint BigInt
}
